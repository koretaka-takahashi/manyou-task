<div class="ml-5">

  <h1 class="mb-5"><%= @user.name %>さんのマイページ</h1>
  <h4 class="">登録メールアドレス：<b><%= @user.email %></b></h4><br>
  <h4 class=""><%= link_to "#{t('view.registerd_task')}", root_path %><b>：<%= @user.tasks.count %></b>件</h4><br>
  
  <button class="mt-3 mb-3 btn btn-success btn-outline-dark"><%= link_to t('view.user_edit'), edit_user_path(@user.id), class: 'text-white' %></button><br>
  <button class="mt-3 btn btn-danger btn-outline-dark"><%= link_to t('view.user_delete'), user_path(@user.id), method: :delete, data: { confirm: t('view.delete_confirm') }, class: 'text-white' %></button>

</div>
