
<div class="index my-4 ml-5">
  <h1>ユーザー管理画面</h1>
  <h3 class="mx-2 pb-3 mt-5"><%= paginate @users %></h3>
    <table class="table table-hover my-5">
      <% @users.each do |u| %>
        <tr class="">
          <th class=""><%= link_to u.name, admin_user_path(u.id), class: 'text-dark' %></th>
          <td class="">(<%= u.tasks.size %>)</td>
        </tr>
      <% end %>
    </table>
  <h3 class="mx-2 mt-5 pt-3 pb-4"><%= paginate @users %></h3>
</div>
